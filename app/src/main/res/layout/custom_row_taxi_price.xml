<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/taxi_diagonal"
        android:layout_marginLeft="20dp"
        >

    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/taxiNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mai Linh Taxi"
            android:textSize="20sp"
            android:layout_marginLeft="26dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/taxiDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7-seater"
            android:textSize="16sp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/taxiPriceTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="100.000 \n VND"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginStart="20dp" />
        <ImageView
            android:id="@+id/callTaxi"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="TODO"
            android:paddingEnd="5dp"
            android:layout_gravity="center"
            android:src="@drawable/call1" />
    </LinearLayout>
</LinearLayout>